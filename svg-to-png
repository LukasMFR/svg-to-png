#!/bin/bash

# Default height
default_height=3200

# Check if at least one argument is provided
if [ "$#" -lt 1 ]; then
    echo "Usage: $0 filename.svg [height]"
    exit 1
fi

# Set the filename and height
filename="${1%.*}"
height=${2:-$default_height}

# Convert SVG to PNG using rsvg-convert with the specified height
# and then set the DPI to 600 using ImageMagick
rsvg-convert -h "$height" "$1" > "${filename}.png" && \
convert "${filename}.png" -units PixelsPerInch -density 600 "${filename}.png"

echo "Conversion complete: ${filename}.png"